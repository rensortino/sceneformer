{
    "name": "Transformer CIFAR10",
    "n_gpu": 1,

    "model": {
        "type": "Transformer",
        "ff_dim" : 2048,
        "emb_size": 512,
        "n_layers" : 8,      
        "n_heads" : 8,       
        "dropout" : 0.2,    
        "lr" : 1e-4,
        "fe_weights_path": "ckpt/cifar10/resnet18.pt",
        "num_classes": 10,
        "seq_len" : 4,
        "max_seq_len": 6,
        "seq_bs" : 16
    },
    "data_loader": {
        "type": "CifarDataLoader",
        "data_dir": "data/",
        "batch_size": 64,
        "img_w": 16,
        "img_h": 16,
        "n_channels": 3,
        "shuffle": true,
        "validation_split": 0.1,
        "num_workers": 2
    },
    "optimizer": {
        "type": "Adam",
        "lr": 0.001,
        "weight_decay": 0,
        "amsgrad": true
    },
    "loss": "mse",
    "metrics": [
        "accuracy", "top_k_acc"
    ],
    "lr_scheduler": {
        "type": "StepLR",
        "step_size": 50,
        "gamma": 0.1
    },
    "trainer": {
        "epochs": 100,

        "save_dir": "saved/",
        "save_period": 1,
        "verbosity": 2,

        "log_every_n_steps": 20,
        
        "monitor": "min val_loss",
        "early_stop": 10,

        "tensorboard": true
    }
}