{
    "name": "MNIST",
    "n_gpu": 1,

    "model": {
        "type": "Transformer",
        "ff_dim" : 2048,
        "emb_size": 512,
        "n_layers" : 4,      
        "n_heads" : 8,       
        "dropout" : 0.2,    
        "fe_weights_path": "ckpt/mnist/resnet18_16class.pt",
        "num_classes": 10,
        "seq_len" : 4,
        "max_seq_len": 6,
        "seq_bs" : 8,
        "ndf": 128,
        "ngf": 128
    },
    "data": {
        "type": "MnistDataLoader",
        "data_dir": "data/",
        "batch_size": 32,
        "img_w": 32,
        "img_h": 32,
        "n_channels": 1,
        "persistent_workers": true,
        "validation_split": 0.1,
        "num_workers": 1
    },
    "optimizer": {
        "type": "Adam",
        "g_lr" : 1e-2,
        "d_lr" : 1e-4,
        "t_lr" : 1e-4,
        "weight_decay": 0,
        "amsgrad": true
    },
    "loss": "kldiv",
    "metrics": [
        "accuracy", "top_k_acc"
    ],

    "lr_scheduler": {
        "type": "StepLR",
        "step_size": 50,
        "gamma": 0.1
    },

    "trainer": {
        "epochs": 100,
        "debug_one_batch": true,

        "weights_path": "tb_logs\\YTID\\Full batch one hot 52\\checkpoints\\epoch=80-step=139157.ckpt",

        "save_dir": "saved/",
        "save_period": 1,
        "verbosity": 2,

        "log_every_n_steps": 20,
        
        "monitor": "min val_loss",
        "early_stop": 10,

        "tensorboard": true
    }
}